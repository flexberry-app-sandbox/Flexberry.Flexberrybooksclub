<h3 class="ui header">{{t "forms.i-i-s-flexberrybooksclub-speaker-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.surname
      class=(if (v-get validationObject "surname" "isInvalid") "error")
      label=(t "forms.i-i-s-flexberrybooksclub-speaker-e.surname-caption")
      data-test-i-i-s-flexberrybooksclub-speaker-e-surname=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "surname" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.firstname
      class=(if (v-get validationObject "firstname" "isInvalid") "error")
      label=(t "forms.i-i-s-flexberrybooksclub-speaker-e.firstname-caption")
      data-test-i-i-s-flexberrybooksclub-speaker-e-firstname=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "firstname" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.secondname
      class=(if (v-get validationObject "secondname" "isInvalid") "error")
      label=(t "forms.i-i-s-flexberrybooksclub-speaker-e.secondname-caption")
      data-test-i-i-s-flexberrybooksclub-speaker-e-secondname=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "secondname" "message")}}
  </div>
</form>